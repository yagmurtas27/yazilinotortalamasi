#include <iostream>

using namespace std;

int main()
{
  	setlocale(LC_ALL,"Turkish"); 
	float Not1,Not2,Average;
	cout << "1. yazılı notunu giriniz: ";
	cin>>Not1;
	cout << "2. yazılı notunu giriniz: ";
	cin>>Not2;
	Average=(Not1+Not2)/2;
	cout<<"Ortalamanız : "<<Average<<endl;
	if(Average>=50){
		cout<<"Dersten geçtiniz.";
	}
	else{
		cout<<"Dersten kaldınız";
	}
}
